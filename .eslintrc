{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb/base",
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "indent": [
      "error",
      2
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "comments": 65,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-plusplus": "off"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}